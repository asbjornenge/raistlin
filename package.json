{
  "name": "@asbjornenge/raistlin",
  "version": "1.1.1",
  "description": "A dev- and buildtool for browserify",
  "main": "index.js",
  "bin": {
    "raistlin": "./lib/cli.js"
  },
  "scripts": {
    "build": "babel src --out-dir lib",
    "test": "babel-node --version",
    "tales": "babel-node src/cli.js start --hot --tales tales/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/asbjornenge/raistlin.git"
  },
  "keywords": [
    "browserify",
    "buildtool",
    "babel",
    "hmr",
    "cli"
  ],
  "author": "Asbjorn Enge <asbjorn@hanafjedle.net>",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/asbjornenge/raistlin/issues"
  },
  "homepage": "https://github.com/asbjornenge/raistlin#readme",
  "dependencies": {
    "shelljs": "^0.5.3",
    "subcmd": "^1.0.1"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "es2015"
        ]
      },
      "development": {
        "stage": 0,
        "plugins": [
          "react-transform"
        ],
        "extra": {
          "react-transform": {
            "transforms": [
              {
                "transform": "react-transform-hmr",
                "imports": [
                  "react"
                ],
                "locals": [
                  "module"
                ]
              }
            ]
          }
        }
      }
    }
  },
  "devDependencies": {
    "babel-cli": "6.5.1",
    "babel-core": "6.4.5",
    "babel-plugin-react-transform": "1.1.1",
    "babel-preset-es2015": "6.3.13",
    "babelify": "6.4.0",
    "browserify": "11.2.0",
    "browserify-hmr": "0.3.1",
    "concurrently": "^0.1.0",
    "cssnano": "^3.3.1",
    "imgurify": "^1.2.0",
    "livereloadify": "^2.0.0",
    "minimatch": "^3.0.0",
    "mocha": "^2.3.4",
    "mocha-imguri-compiler": "^1.1.1",
    "mocha-stylus-compiler": "^1.0.1",
    "react": "^15.0.0",
    "react-dom": "^15.0.0",
    "react-transform-hmr": "1.0.1",
    "stylus": "^0.51.1",
    "stylusify": "^2.1.0",
    "testdom": "^2.0.0",
    "uglifyjs": "^2.4.10",
    "watchify": "3.4.0"
  }
}
