{
  "scripts": {
    "start": "raistlin start app/dom.js --hot",
    "tales": "raistlin start tales/app.js --hot --out tales/build.js --static tales",
    "build": "npm run build-js && npm run bundle-js",
    "build-js": "raistlin build app/dom.js --out .raistlin/build.js",
    "bundle-js": "raistlin bundle .raistlin/build.js --out dist/app.js"
  },
  "babel": {
    "env": {
      "development": {
        "stage": 0
      },
      "hotdevelopment": {
        "stage": 0,
        "plugins": [
          "react-transform"
        ],
        "extra": {
          "react-transform": {
            "transforms": [
              {
                "transform": "react-transform-hmr",
                "imports": [
                  "react"
                ],
                "locals": [
                  "module"
                ]
              }
            ]
          }
        }
      }
    }
  },
  "dependencies": {
    "react": "^15.0.1",
    "react-dom": "^15.0.1"
  },
  "devDependencies": {
    "babel-core": "6.4.5",
    "babel-plugin-react-transform": "1.1.1",
    "babel-preset-es2015": "6.3.13",
    "babelify": "6.4.0",
    "browserify": "11.2.0",
    "browserify-hmr": "0.3.1",
    "concurrently": "2.0.0",
    "cssnano": "3.3.1",
    "livereloadify": "2.0.0",
    "react-transform-hmr": "1.0.1",
    "uglifyjs": "2.4.10",
    "watchify": "3.4.0"
  }
}
