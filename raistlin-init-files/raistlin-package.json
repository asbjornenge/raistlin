{
  "scripts": {
    "start": "raistlin start --hot --images --stylus dom.js",
    "tales": "raistlin start --hot --images --stylus --tales tales.js",
    "build": "raistlin --hot build",
    "bundle": "raistlin bundle"
  },
  "babel": {
    "env": {
      "development": {
        "stage": 0,
        "plugins": [
          "react-transform"
        ],
        "extra": {
          "react-transform": {
            "transforms": [
              {
                "transform": "react-transform-hmr",
                "imports": [
                  "react"
                ],
                "locals": [
                  "module"
                ]
              }
            ]
          }
        }
      }
    }
  },
  "dependencies": {
    "react": "^15.0.1",
    "react-dom": "^15.0.1"
  },
  "devDependencies": {
    "babel-core": "6.4.5",
    "babel-plugin-react-transform": "1.1.1",
    "babel-preset-es2015": "6.3.13",
    "babelify": "6.4.0",
    "browserify": "11.2.0",
    "browserify-hmr": "0.3.1",
    "concurrently": "2.0.0",
    "cssnano": "3.3.1",
    "imgurify": "1.2.0",
    "livereloadify": "2.0.0",
    "react-transform-hmr": "1.0.1",
    "stylus": "0.51.1",
    "stylusify": "2.1.0",
    "uglifyjs": "2.4.10",
    "watchify": "3.4.0"
  }
}
